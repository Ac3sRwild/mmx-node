package mmx;

class BlockHeader {
	
	hash_t hash;
	
	hash_t prev;
	
	uint version;
	
	uint deficit;			// number of missed blocks before this one
	
	long time_ms;			// UTC [ms]
	
	ulong time_diff;
	ulong space_diff;
	
	ProofOfTime* proof_of_time;
	
	ProofOfSpace* proof_of_space;
	
	Transaction* coin_base;
	
	hash_t tx_hash;
	
	bls_signature_t farmer_sig;
	
	
	bool is_valid() const;
	
	hash_t calc_hash() const;
	
}
